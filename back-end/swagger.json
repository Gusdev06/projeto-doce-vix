{
    "openapi": "3.0.1",
    "info": {
        "title": "Doce Vix API",
        "description": "API para um restaurante",
        "contact": {
            "email": "gugomes688@hotmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333/",
            "description": "Api de teste"
        }
    ],
    "paths": {
        "/categories": {
            "post": {
                "summary": "Cria uma categoria",
                "description": "Cria uma categoria",
                "tags": [
                    "Categories"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Categories"
                            },
                            "examples": {
                                "Categories": {
                                    "value": {
                                        "name": "Sobremesas",
                                        "description": "Sobremesas em geral"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#/components/schemas/Categories"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "get": {
                "summary": "Lista todas as categorias / Busca categoria por nome",
                "tags": [
                    "Categories"
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Nome da categoria a ser buscada",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "201": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#/components/schemas/Categories"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "put": {
                "summary": "Atualiza uma categoria existente",
                "tags": [
                    "Categories"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Unauthorized"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#/components/schemas/Categories"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        },
        "/categories/{guid}": {
            "delete": {
                "summary": "Deleta uma categoria existente",
                "tags": [
                    "Categories"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "guid",
                        "in": "path",
                        "description": "guid da categoria a ser deletada",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Categoria deletada com sucesso"
                    },
                    "404": {
                        "description": "Categoria não encontrada"
                    },
                    "400": {
                        "description": "Solicitação inválida"
                    },
                    "500": {
                        "description": "Erro interno do servidor"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Categories": {
                "type": "object",
                "properties": {
                    "guid": {
                        "type": "string",
                        "description": "Identificador único da categoria"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}